<div id="fh5co-main">
    <div class="fh5co-narrow-content">
        <h2 class="fh5co-heading animate-box" data-animate-effect="fadeInLeft">Read Our Blog</h2>
        <div class="row row-bottom-padded-md">
            {% for article in paginator %}
            <div class="col-md-3 col-sm-6 col-padding animate-box" data-animate-effect="fadeInLeft">
                <div class="blog-entry">
                    <a href="#" class="blog-img"><img  style="width: 110%;" src="{{ article.imageName }}" class="img-responsive"
                                                      alt="steven"></a>
                    <div class="desc">
                        <h3><a href="{{ path('show', {slug: article.slug}) }}">{{ article.title }}</a></h3>
                        <span><small>by {{ article.user }} </small> / <small> {{ article.category }} </small> / <small> <i
                                        class="icon-comment"></i>{{ article.comments|length }} Commentaires</small></span>
                        <p> {{ ((article.content|length > 50 )? article.content|slice(0, 130) ~ '...' : article.content)|raw }}</p>
                        <a href="{{ path('show', {slug: article.slug}) }}" class="lead">Read More <i class="icon-arrow-right3"></i></a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="margin-bottom-30">
            {#{% if form is defined %}#}
            {{ knp_pagination_render(paginator) }}
            {#{% endif %}#}
        </div>
    </div>

</div>
