<div class="container">
    <div class="row margin-top-20">
        <div class="col-md-6">
            {% if article.imageFile %}
                <img src="/images/Articles%/{{ article.imageName }}" alt="picture">
            {% else %}
                <img src="{{ article.imageName }}" alt="">
            {% endif %}
        </div>
        <div class="col-md-6">
            <h4 class="bold center-align">{{ article.title }}</h4>
            <p style="font-weight:bold;"> Created the {{ article.createdAt | date('d/m/y') }}
                at {{ article.createdAt | date('H:i') }}
                in the Category <br><a href="{{ path('category', {id: article.category.id}) }}"
                                       class="font-italic bg-danger">{{ article.category.name }}</a></p>
            <span class="text-justify">{{ article.content | raw }}</span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h3 class="center-align margin-top-15">{{ article.comments | length }} Commentaires</h3>
            {% for comment in article.comments %}
                <section class="my-5">

                    <!-- Grid row -->
                    <div class="row">

                        <!-- Grid column -->
                        <div class="col-md-12">

                            <!-- Newsfeed -->
                            <div class="mdb-feed">
                                <!-- Fourth news -->
                                <div class="news">

                                    <!-- Label -->
                                    <div class="label float-left padding-right-5">
                                        <img src="https://mdbootstrap.com/img/Photos/Avatars/img%20(18)-mini.jpg"
                                             class="rounded-circle z-depth-1-half">
                                    </div>

                                    <!-- Excerpt -->
                                    <div class="excerpt text-justify">

                                        <!-- Brief -->
                                        <div class="brief">
                                            <p><span class="bold name">{{ comment.author }}</span>
                                                {{ comment.createdAt | date('d/m/y') }}
                                                at {{ comment.createdAt | date('H:i') }}</p>
                                        </div>

                                        <!-- Added text -->
                                        <div class="added-text text-justify">{{ comment.content| raw }}
                                        </div>

                                    </div>
                                    <!-- Excerpt -->

                                </div>
                                <!-- Fourth news -->
                            </div>
                        </div>
                    </div>
                </section>
            {% endfor %}
        </div>
    </div>
</div>
{% if app.user %}
    <div class="margin-top-20 margin-bottom-20 col-md-6 offset-md-6">
        {{ form_start(formComment) }}
        {{ form_row(formComment.content) }}
        <button type="submit" class="btn btn-info btn-md">Submit</button>
        {{ form_end(formComment) }}
    </div>
{% endif %}